<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <div id="header">
      <div id="header-left">
        <h1><%= title %></h1>
      </div>
      <div id="header-right">
        <a href="/submit">Submit</a>
      </div>
    </div>
    <div id="wrapper">
      <% for (var i = 0; i < posts.length; i++) { %>
        <div class="post">
          <div class="post-header">
            <h3 class="post-title"><%= posts[i].title %></h3>
            <span class="post-author"><%= posts[i].author %></span>
          </div>
          <div class="post-content-wrapper">
            <p class="post-content">
              <%= posts[i].content %>
            </p>
        </div>
      <% } %>
    </div>
  </body>
</html>
